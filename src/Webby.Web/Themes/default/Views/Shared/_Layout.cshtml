<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ViewBag.SiteTitle</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.1/dist/flowbite.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="flex flex-col min-h-full bg-gray-50 text-gray-900 antialiased">

    <header class="bg-white shadow-sm border-b border-gray-200">
        <nav class="max-w-5xl mx-auto px-4 py-4 flex items-center justify-between">
            <a asp-controller="Home" asp-action="Index"
               class="text-xl font-bold text-indigo-600 hover:text-indigo-700 transition-colors">
                @ViewBag.SiteTitle
            </a>
            <ul class="flex items-center gap-6 text-sm font-medium">
                <li>
                    <a asp-controller="Home" asp-action="Index"
                       class="text-gray-600 hover:text-indigo-600 transition-colors">Home</a>
                </li>
                <li>
                    <a asp-controller="Page" asp-action="About"
                       class="text-gray-600 hover:text-indigo-600 transition-colors">About</a>
                </li>
            </ul>
        </nav>
    </header>

    <main class="flex-grow max-w-5xl mx-auto px-4 py-10 w-full">
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-5xl mx-auto px-4 py-5 text-center text-sm text-gray-400">
            &copy; @DateTime.Now.Year <span class="font-medium text-gray-500">@ViewBag.SiteTitle</span>
            &mdash; @ViewBag.SiteTagline
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.1/dist/flowbite.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
